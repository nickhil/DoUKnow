<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#000000"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="@string/douknow"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeader"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/qAnsList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/edtPostAnswer"
        android:layout_below="@+id/txtQuestion"
        android:layout_marginTop="10dp"
         />

    <EditText
        android:id="@+id/edtPostAnswer"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnPostAnswer"
        android:background="@drawable/edt_bg"
        android:textSize="20dp" 
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/btnPostAnswer"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_selector"
        android:onClick="Post"
        android:text="@string/btnPost"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>